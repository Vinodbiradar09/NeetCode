generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  password      String
  name          String?
  createdAt     DateTime      @default(now())
  refreshTokens String?       @unique
  submissions   CodeDetails[]
}

model Problem {
  id          String        @id @default(uuid())
  title       String
  description String
  examples    String?
  submissions CodeDetails[]
}

model CodeDetails {
  id        String    @id @default(uuid())
  lang      Languages
  code      String
  status    Status
  output    String?
  error     String?
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  problemId String
  problem   Problem   @relation(fields: [problemId], references: [id])
}

enum Languages {
  JavaScript
  Rust
  GoLang
}

enum Status {
  Tle
  Success
  Fail
}
